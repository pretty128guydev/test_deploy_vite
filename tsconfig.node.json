{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* For Shadcn UI */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Node.js specific config */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,

    /* JSX */
    "jsx": "react-jsx",  // Add this line to enable JSX support

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "global.d.ts"
  ]
}
